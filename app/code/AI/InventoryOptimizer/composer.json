{
  "name": "ai/module-inventory-optimizer",
  "description": "An AI-powered inventory management module for Magento 2 that provides demand forecasting, stock balancing, order routing, fraud detection, and a chat copilot.",
  "require": {
    "php": "^7.4 || ^8.0",
    "magento/framework": "^103.0.0",
    "magento/module-inventory": "^1.0.0",
    "magento/module-inventory-api": "^1.0.0",
    "magento/module-store": "^101.0.0",
    "magento/module-catalog": "^104.0.0",
    "magento/module-sales": "^103.0.0"
  },
  "suggest": {
    "ext-curl": "Required for external API communication",
    "ext-json": "Required for JSON processing"
  },
  "type": "magento2-module",
  "version": "1.0.0",
  "license": "OSL-3.0",
  "autoload": {
    "files": [ "registration.php" ],
    "psr-4": {
      "AI\\InventoryOptimizer\\": ""
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "authors": [
    {
      "name": "AI Inventory Team",
      "email": "support@example.com"
    }
  ],
  "keywords": [
    "magento2",
    "inventory",
    "ai",
    "forecasting",
    "fraud-detection",
    "order-routing"
  ],
  "support": {
    "issues": "https://github.com/ai-inventory/module-inventory-optimizer/issues",
    "docs": "https://github.com/ai-inventory/module-inventory-optimizer/wiki"
  }
} 